{{#unless error}}

<div class="bg-light p-5 rounded mt-3">
    <h1>Editar</h1>
    <form action="/update" method="post">
        <div class="row mt-5">
            <div class="col-md-5 mb-3">

                <label for="nome" class="form-label" >Placa do carro</label>
                <input type="text" value="{{id}}" name="id">
                <input value="{{placa}}" type="text" class="form-control" id="nome" placeholder="digite seu nome" name="placa">

            </div>

            <div class="col-md-5 mb3">
                
                <label for="email" class="form-label">Modelo do carro</label>
                <input  value = "{{modelo}}" type="text" class="form-control" id="email" placeholder="digite seu email" name="modelo">

            </div>
            <div class="col-md-2 mb-3" >
                <button class="mt-3 p-3 w-100 btn btn-warning">Salvar Alterações</button>

            </div>
        </div>
    </form>
</div>
{{else}}

<div class="card bg-danger text-white">
  <div class="card-body" > 
    Houve um problema: {{problema}}
 </div>

</div>

{{/unless}}